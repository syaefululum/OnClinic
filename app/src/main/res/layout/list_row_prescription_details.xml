<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/categoryMedicine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_bg"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimary"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp">

                    <com.example.posmedicine.TextView_Lato
                        android:id="@+id/tmedicine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Medicine Name"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/lType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tmedicine_name"
                        android:orientation="horizontal">

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/tmedicine_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Type"
                            android:textColor="@color/colorLightGray"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lType"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/tmedicine_quantity_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Quantity : "
                            android:textColor="@color/colorLightGray"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/tmedicine_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Value"
                            android:textColor="@color/colorLightGray"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/tmedicine_type_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Unit Type"
                            android:textColor="@color/colorLightGray"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/tmedicine_note_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Note : "
                            android:textColor="@color/colorLightGray"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/tmedicine_note_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Value"
                            android:textColor="@color/colorLightGray"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="10dp">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/bDeleteMedicine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{fa-trash}"
                            android:textColor="@color/colorAccent"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>