<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cvDetailTransaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_bg"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="107dp"
                    android:layout_marginTop="10dp">

                    <com.example.posmedicine.TextView_Lato
                        android:id="@+id/vDetail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Medicine Name"
                        android:textColor="@color/colorGray"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <!--<LinearLayout-->
                        <!--android:id="@+id/lType"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@+id/vDetail_name"-->
                        <!--android:layout_marginTop="3dp"-->
                        <!--android:orientation="horizontal">-->

                        <!--<com.example.posmedicine.Textview_lato_thin-->
                            <!--android:id="@+id/medicine_type"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="20dp"-->
                            <!--android:text="Type"-->
                            <!--android:textColor="@color/colorLightGray"-->
                            <!--android:textSize="16dp" />-->
                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:id="@+id/lQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vDetail_name"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/vDetail_qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Quantity"
                            android:textColor="@color/colorLightGray"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp" />

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/unit_medicine_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unit"
                            android:textColor="@color/colorLightGray"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lQuantity"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/vDetail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Price"
                            android:textColor="@color/colorLightGray"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp" />

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/unit_medicine_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unit"
                            android:textColor="@color/colorLightGray"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lPrice"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <com.example.posmedicine.TextView_Lato_Thin
                            android:id="@+id/vDetail_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="Total Price"
                            android:textColor="@color/colorLightGray"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>