<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_treatment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.posmedicine.activities.TreatmentActivity">

    <com.example.posmedicine.TextView_Lato
        android:id="@+id/treatment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Patient List"
        android:textColor="@color/colorGray"
        android:textSize="16dp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTreatment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/treatment_title" />
</RelativeLayout>

